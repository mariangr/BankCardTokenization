<Window x:Class="BankCardTokenization.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankCardTokenization.Server"
        mc:Ignorable="d"
        Title="Bank Card Tokenization Server" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock x:Name="txbMessages" Margin="10">Messages:</TextBlock>
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="txtMessages" Margin="10"></TextBox>
        <Button Grid.Row="2" x:Name="btnExportByToken" Margin="10" Click="btnExportByToken_Click">Export by Token</Button>
        <Button Grid.Row="2" Grid.Column="1" x:Name="btnExportByBankCard" Margin="10" Click="btnExportByBankCard_Click">Export by Bank Card</Button>
    </Grid>
</Window>
